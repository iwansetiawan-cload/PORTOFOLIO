@model PORTOFOLIO.Models.Branda
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    var title = "Input Branda";
}



<form id="profile-form" method="post" enctype="multipart/form-data">
    <div class="container">
        <div class="row p-3 border">

            <div class="col-12 border-bottom">
                <h2 class="text-primary">@title</h2>
            </div>
            <div class="col-12 pt-2">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Title"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Title" class="form-control" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Position"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Position" class="form-control" />
                        <span asp-validation-for="Position" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Content"></label>
                    </div>
                    <div class="col-8">
                        <textarea asp-for="Content" class="form-control"></textarea>
                        <span asp-validation-for="Content" class="text-danger"></span>
                    </div>
                </div>
            
                <div class="form-group row">
                   
                 @*   <div class="form-floating py-2">
                        <input asp-for="Photo" type="file" name="files" id="uploadBox" multiple class="form-control" placeholder="Photo" />
                        <label class="form-label">Photo </label>
                    </div>*@

                    @Html.LabelFor(model => model.Photo, "Image", htmlAttributes: new { @class = "control-label col-md-4" })
                    <div class="col-8">
                        <input type="file" name="files" id="uploadBox" multiple class="form-control" />
                    </div>
                </div>
                <br />


				<div class="form-group row">
                    <div class="col-4 offset-4">
                        @if (Model.Id != 0)
                        {
                         @*   <partial name="_EditAndBackToListButton" model="Model.Id" />*@
                            <button type="submit" class="btn btn-success form-control">Update</button>
                        }
                        else
                        {
                            <partial name="_CreateAndBackToListButton" />
                        }
                    </div>
                </div>
            </div>

        </div>

    </div>

</form>

@section Scripts{
    <script src="assets/js/main.js"></script>
    <partial name="_ValidationScriptsPartial" />
    <script type="text/javascript">



    </script>


}

