@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="container">
    <div id="logreg-forms" class="align-content-md-center">
        <div class="col-md-4">
            <form id="account" method="post">
                <div class="py-2 input-group">
                    <input asp-for="Input.Email" type="text" placeholder="Email..." class="form-control" />
                </div>
                <div class="py-2 input-group">
                    <input asp-for="Input.Password" placeholder="Password..." type="password" class="form-control" />
                </div>                         
                <button type="submit" class="btn btn-success form-control"><i class="fas fa-sign-in-alt"></i> Sign in</button>
                <div asp-validation-summary="All" class="text-danger"></div>

            </form>
        </div>



    </div>
</div>


